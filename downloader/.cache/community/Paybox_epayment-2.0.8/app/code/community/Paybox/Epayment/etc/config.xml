<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Paybox_Epayment>
            <version>2.0.8</version>
        </Paybox_Epayment>
    </modules>
    <frontend>
        <translate>
            <modules>
                <Paybox_Epayment>
                    <files>
                        <default>Paybox_Epayment.csv</default>
                    </files>
                </Paybox_Epayment>
            </modules>
        </translate>
        <layout>
            <updates>
                <pbxep>
                    <file>pbxep.xml</file>
                </pbxep>
            </updates>
        </layout>
    	<routers>
            <pbxep>
                <use>standard</use>
                <args>
                    <module>Paybox_Epayment</module>
                    <frontName>paybox</frontName>
                </args>
            </pbxep>
    	</routers>
    </frontend>
    <global>
        <blocks>
            <pbxep>
                <class>Paybox_Epayment_Block</class>
            </pbxep>
        </blocks>
        <events>
            <sales_order_save_commit_after>
                <observers>
                    <pbxep_after_order_save>
                        <class>pbxep/observer</class>
                        <method>onAfterOrderSave</method>
                    </pbxep_after_order_save>
                </observers>
            </sales_order_save_commit_after>
        </events>
        <helpers>
            <pbxep>
                <class>Paybox_Epayment_Helper</class>
            </pbxep>
        </helpers>
        <models>
            <pbxep>
                <class>Paybox_Epayment_Model</class>
                <resourceModel>paypal_resource</resourceModel>
            </pbxep>
            <pbxep_resource>
                <class>Paybox_Epayment_Model_Resource</class>
            </pbxep_resource>
        </models>
        <resources>
            <pbxep_setup>
                <setup>
                    <module>Paybox_Epayment</module>
                    <class>Paybox_Epayment_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pbxep_setup>
            <pbxep_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pbxep_write>
            <pbxep_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pbxep_read>
            <pbxep_helpers>
                <!-- Helper definition needed by Magento -->
                <class>Mage_Core_Helper</class>
            </pbxep_helpers>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <direct_invoice before="Mage_Adminhtml">Paybox_Epayment_Adminhtml</direct_invoice>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Paybox_Epayment>
                    <files>
                        <default>Paybox_Epayment.csv</default>
                    </files>
                </Paybox_Epayment>
            </modules>
        </translate>
        <layout>
            <updates>
                <pbxep>
                    <file>pbxep.xml</file>
                </pbxep>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <pbxep_append>
                        <type>singleton</type>
                        <class>pbxep/observer</class>
                        <method>addBlockAtEndOfMainContent</method>
                    </pbxep_append>
                </observers>
            </controller_action_layout_load_before>
            <adminhtml_sales_order_create_process_data_before>
                <observers>
                    <pbxep_before_admin_order_create>
                        <class>pbxep/observer_adminCreateOrder</class>
                        <method>onBeforeCreate</method>
                    </pbxep_before_admin_order_create>
                </observers>
            </adminhtml_sales_order_create_process_data_before>
            <checkout_submit_all_after>
                <observers>
                    <pbxep_before_admin_order_save>
                        <class>pbxep/observer_adminCreateOrder</class>
                        <method>onAfterSubmit</method>
                    </pbxep_before_admin_order_save>
                </observers>
            </checkout_submit_all_after>
        </events>
    </adminhtml>
    <default>
        <pbxep>
            <environment>TEST</environment>
            <automatic_invoice>0</automatic_invoice>
            <info_to_customer>1</info_to_customer>
            <debug>0</debug>
            <merchant>
                <site>1999888</site>
                <rank>77</rank>
                <identifier>3262411</identifier>
                <default_password>1999888I</default_password>
                <default_hmackey>0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF0123456789ABCDEF</default_hmackey>
                <hmacalgo>SHA512</hmacalgo>
                <subscription>flexible</subscription>
            </merchant>
            <languages>
                <fr>FRA</fr>
                <es>ESP</es>
                <it>ITA</it>
                <de>DEU</de>
                <nl>NLD</nl>
                <sv>SWE</sv>
                <pt>PRT</pt>
                <default>GBR</default>
            </languages>
            <allowedips>194.2.122.158,195.25.7.166,195.101.99.76,10.48.2.254</allowedips>
            <kwixo>
                <default_carrier_type>4</default_carrier_type>
                <default_carrier_speed>2</default_carrier_speed>
                <default_categorie>1</default_categorie>
            </kwixo>
        </pbxep>
