<?xml version="1.0"?>
<config>
    <sections>
        <advancednewsletter translate="label" module="advancednewsletter">
            <label>Advanced Newsletter</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <display_segments_at_customer_registration translate="label">
                            <label>Display segments at customer registration form</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_segments_at_customer_registration>
                        <test_email>
                            <label>Address to send test email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </test_email>
                        <send_subscription_success_notification translate="label">
                            <label>Send subscription success notification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_subscription_success_notification>
                        <send_unsubscription_success_notification translate="label">
                            <label>Send unsubscription success notification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </send_unsubscription_success_notification>
                        <stored_emails_lifetime>
                            <label>Remove Emails Web copies older than X days</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>41</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stored_emails_lifetime>
                    </fields>
                </general>
                <formconfiguration translate="label">
                    <label>Form configuration</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <formstyle translate="label">
                            <label>Form display style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>advancednewsletter/source_formpositions</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </formstyle>
                        <displayname translate="label">
                            <label>Display name</label>
                            <comment>Adds name fields for guests</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayname>
                        <displaysalutation translate="label">
                            <label>Display salutation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displaysalutation>
                        <salutation1 translate="label">
                            <label>Salutation 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </salutation1>
                        <salutation2 translate="label">
                            <label>Salutation 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>66</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </salutation2>
                        <displayphone translate="label">
                            <label>Display phone</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayphone>
                        <segmentsstyle translate="label">
                            <label>Segments style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>advancednewsletter/source_segmentsstyle</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </segmentsstyle>
                        <defaultsubscription translate="label">
                            <label>Default subscription</label>
                            <comment>Customer will be automatically subscribed to this segment without choice</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>advancednewsletter/source_defaultsubscription</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </defaultsubscription>
                    </fields>
                </formconfiguration>
                <mailchimpconfig translate="label">
                    <label>MailChimp configuration</label>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <mailchimpenabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mailchimpenabled>
                        <autosync translate="label">
                            <label>MailChimp auto-sync</label>
                            <comment>Enables/disables auto-synchronization with MailChimp which happens each time a user subscribes/unsubscribes</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </autosync>
                        <apikey translate="label">
                            <label>API key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apikey>
                        <listid translate="label">
                            <label>List ID</label>
                            <comment>Make sure that there is at least one group in the selected list</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>advancednewsletter/source_mailchimplist</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </listid>
                        <test_connection translate="label">
                            <frontend_model>advancednewsletter/adminhtml_system_configuration_button</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </test_connection>
                    </fields>
                </mailchimpconfig>
            </groups>
        </advancednewsletter>
    </sections>
</config>
